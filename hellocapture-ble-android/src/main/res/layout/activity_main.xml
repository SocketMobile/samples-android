<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.socketmobile.android.hellocaptureble.MainActivity">

    <TextView
        android:id="@+id/main_label_service_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="false"
        android:text="Service:"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:fontFamily="sans-serif"
        tools:ignore="HardcodedText"
        />
    <TextView
        android:id="@+id/main_service_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/main_label_service_status"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:fontFamily="sans-serif-condensed"
        tools:text="Ready"
        tools:textColor="#2AA324"
        />
    <View
        android:id="@+id/divider_service_status"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/main_label_service_status"
        android:background="?android:attr/listDivider"
        />
    <TextView
        android:id="@+id/main_label_device_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_service_status"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="8dp"
        android:text="Device:"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:ignore="HardcodedText"
        />
    <TextView
        android:id="@+id/main_device_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/main_label_device_status"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:fontFamily="sans-serif-condensed"
        tools:text="Connecting"
        tools:textColor="#FF7400"
        />
    <View
        android:id="@+id/divider_device_status"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/main_label_device_status"
        android:background="?android:attr/listDivider"
        />
    <TextView
        android:id="@+id/main_label_device_manager_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_device_status"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="8dp"
        android:text="Device Manager:"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:ignore="HardcodedText"
        />
    <TextView
        android:id="@+id/main_device_manager_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/main_label_device_manager_status"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:fontFamily="sans-serif-condensed"
        tools:text="Connecting"
        tools:textColor="#FF7400"
        />
    <View
        android:id="@+id/divider_device_manager_status"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/main_label_device_manager_status"
        android:background="?android:attr/listDivider"
        />

    <Button
        android:id="@+id/manual_discovery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_device_manager_status"
        android:layout_marginTop="24dp"
        android:text="Start Manual Discovery"
        android:onClick="startManualDiscovery"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/connected_device_type_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/manual_discovery"
        android:layout_marginTop="12dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:fontFamily="sans-serif"
        android:text="Connected Device Type :" />

    <ListView
        android:id="@+id/device_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/connected_device_type_title"></ListView>

    <TextView
        android:id="@+id/current_favorite_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/device_list"
        android:layout_marginTop="12dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:fontFamily="sans-serif"
        android:text="Current Favorite :" />
    <TextView
        android:id="@+id/current_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/device_list"
        android:layout_toRightOf="@+id/current_favorite_title"
        android:textSize="15sp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="5dp"
        android:text="Empty" />

    <TextView
        android:id="@+id/toggle_favorite_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/current_favorite_title"
        android:layout_marginTop="12dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:fontFamily="sans-serif"
        android:text="Set Favorite :" />

    <Spinner
        android:id="@+id/spinner_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/current_favorite_title"
        android:layout_toRightOf="@+id/toggle_favorite_text"
        android:layout_marginTop="12dp"/>

    <View
        android:id="@+id/divider_spinner"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/spinner_favorite"
        android:layout_marginTop="12dp"
        android:background="?android:attr/listDivider"
        />

    <TextView
        android:id="@+id/hello_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_spinner"
        android:layout_marginTop="12dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:fontFamily="sans-serif"
        android:scrollbars = "vertical"
        android:ellipsize="end"
        android:text="Scan Data : "/>

    <Button
        android:id="@+id/btn_clear_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clearData"
        android:text="Clear Data"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/divider_spinner"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        />

</RelativeLayout>
